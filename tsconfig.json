{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "sdk/typescript/src/**/*",
    "examples/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}